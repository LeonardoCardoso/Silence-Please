<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_item"
    style="@style/ListItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_category_users"
    android:background="@drawable/p_list_view_item"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingBottom="15dp"
    android:paddingLeft="@dimen/settings_padding_content"
    android:paddingTop="15dp" >

    <com.leocardz.silence.please.custom.SPTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:textColor="@color/soft_grey"
        android:textSize="@dimen/settings_list_item_text_size" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>