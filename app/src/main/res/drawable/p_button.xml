<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/end" android:startColor="@color/start" />

            <stroke android:width="0.5dp" android:color="@color/start" />

            <corners android:radius="5dp" />

            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/start" android:startColor="@color/end" />

            <stroke android:width="0.5dp" android:color="@color/start" />

            <corners android:radius="5dp" />

            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>

</selector>